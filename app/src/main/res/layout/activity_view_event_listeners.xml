<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ViewEventListenersActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Drag and Drop Demo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Drag and Drop Demo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewDragSource"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Long press to drag me!"
            android:background="@color/primary_blue"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewDragTarget"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Drop target area"
            android:background="@drawable/drag_target_background"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDragStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Ready for drag"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <!-- Long Click Demo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Long Click Demo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonLongClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click or Long Click Me"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewLongClickStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Waiting for click"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <!-- Focus Change Demo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Focus Change Demo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextFocus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Click here to focus, click elsewhere to unfocus"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewFocusStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: No focus"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <!-- Touch Demo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Touch Demo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <View
            android:id="@+id/viewTouchArea"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/background_light"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â†‘ Touch the area above"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewTouchStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: No touch detected"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <!-- Text Watcher Demo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Text Watcher Demo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextWatcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type something here..."
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewTextChangeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: No text entered"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <!-- Editor Action Demo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Editor Action Demo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type and press Done/Enter"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:imeOptions="actionDone"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewEditorStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Waiting for Done action"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>